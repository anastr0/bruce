# HMAC Secret Key for signature verification
# Generate a secure random key: openssl rand -hex 32
HMAC_SECRET=your-secret-key-here-change-this-in-production
# KAFKA_BOOTSTRAP_SERVERS=localhost:9092,localhost:9093,localhost:9094
KAFKA_BOOTSTRAP_SERVERS=kafka1:9092,kafka2:9092,kafka3:9092
KAFKA_CLUSTER_ID=manually-generate-id
# Kafka topic name for payment events
KAFKA_TOPIC=payment-webhooks

# Webhook listener URL the worker POSTs each message to (merchant-server)
WEBHOOK_URL=http://merchant-server:5001/webhook_listener

# Postgres (transactional outbox storage)
POSTGRES_DB=bruce
POSTGRES_USER=bruce
POSTGRES_PASSWORD=bruce

# Outbox publisher tuning
OUTBOX_POLL_INTERVAL_SEC=30
OUTBOX_BATCH_SIZE=25
